<% cache message do %>
<div class="feed-element">
  <a href="javascript:void();" class="pull-left">
    <%if @user==nil%>
    <img alt="image" class="img-circle" src="/uploads/<%=user.avatar%>">
   <%else%>
    <img alt="image" class="img-circle" src="/uploads/<%=@user.avatar%>">
   <%end%>
  </a>
  <div class="media-body ">
    <small class="pull-right text-navy"><%=message.created_at.strftime("%Y-%m-%d %H:%M") %>
    </small>

    <%if @user==nil%>
    <strong><%=user.username%></strong>
   <%else%>
    <strong><%=@user.username%></strong> 
   <%end%>
    
    <p><%= message.content %></p>
    <input type="hidden" id="step_order" value="<%= message.step_order %>"/>
  </div>
</div>
<% end %>