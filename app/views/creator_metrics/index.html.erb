   <div id="page-wrapper" class="gray-bg">
      <div class="wrapper wrapper-content animated fadeInRight">
        <div class="ibox-title">
          <h5>粉丝画像</h5>
        </div>

        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-3">
              <a class="btn btn-sm btn-primary m-t-n-xs" href="/creator_metrics/new" role="button">
                <strong>新增</strong>
              </a>
            </div>
          </div>

          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
              <tr>
                <th>#</th>
                <th>指标</th>
                <th>数据</th>
                <th>操作</th>
              </tr>
              </thead>
              <tbody>
                <% @creator_metrics.each_with_index do |creator_metric,i| %>
              <tr>
                <td><%=(i+1)%></td>
                <td><%=creator_metric.metric_name%></td>
                <td><%=creator_metric.metric_value%></td>
                <td>
                    <%= link_to '编辑', edit_creator_metric_path(creator_metric) %>
                     
                  <a href="/creator_metrics/destroy/<%=creator_metric.id%>">删除</a>
                </td>
              </tr>
              <% end %>
              </tbody>
            </table>
             <%=will_paginate @creator_metrics,:class=>"pagination",:previous_label=>"上一页",:next_label=>"下一页"%>
          </div>
        </div>
      </div>
      <div class="footer">
        <div class="pull-right">
          <strong>GonPush.com</strong> &copy; 2018
        </div>
      </div>
    </div>