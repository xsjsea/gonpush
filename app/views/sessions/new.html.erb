<script type="text/javascript">
  function submitfrm(){
   
    var truename=document.getElementById("truename").value;
    if(truename==""){
      document.getElementById("notice").innerText="请填写手机";
      return;
    }
    var password=document.getElementById("password").value;
    if(password==""){
      document.getElementById("notice").innerText="请填写密码";
      return;
    }
    document.getElementById("formregister").submit();
  }
</script>

<h3>欢迎登录原力推平台</h3>
  <p id="notice"><%=notice%></p>
  <form action="/login" id="formregister" method="post">
              <div class="form-group"> 
                 <input type="text" name="truename" id="truename" placeholder='手机' class='form-control'/>
              </div>
              <div class="form-group">
                 
                 <input type="password" name="password" id="password" placeholder='密码' class='form-control'/>
              </div>
              <input type="button" onclick="submitfrm()" class="btn btn-primary block full-width m-b" value="登录"/>
            </form>
              <a href="forgot_password.html"><small>忘记密码?</small></a>
              <p class="text-muted text-center"><small>还没有创建账户?</small></p>
              <a class="btn btn-sm btn-white btn-block" href="/register">立即注册</a>
 

