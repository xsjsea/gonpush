<h3>欢迎登录原力推平台</h3>
<%= form_for(:session,url:login_path ) do |form| %>
              <div class="form-group">
                <%= form.text_field :truename,class:'form-control',placeholder:'手机' %>
              </div>
              <div class="form-group">
                <%= form.password_field :password,class:'form-control',placeholder:'密码' %>
              </div>
              
               <%= form.submit '登录',class:'btn btn-primary block full-width m-b' %>
              <a href="forgot_password.html"><small>忘记密码?</small></a>
              <p class="text-muted text-center"><small>还没有创建账户?</small></p>
              <a class="btn btn-sm btn-white btn-block" href="/register">立即注册</a>
<% end %>

