<div id="page-wrapper" class="gray-bg">
<div class="wrapper wrapper-content animated fadeInRight">
        <div class="ibox-title">
          <h5>案例列表</h5>
        </div>

        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-3">
              <a class="btn btn-sm btn-primary m-t-n-xs" href="/cases/new" role="button">
                <strong>新增</strong>
              </a>
            </div>
          </div>

          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
              <tr>
                <th>#</th>
                <th>案例</th>
                <th>操作</th>
              </tr>
              </thead>
              <tbody>
              <% @cases.each do |case,i| %>
              <tr>
                <td><%=i%></td>
                <td><a href="javascript:void(0);"><%= case.case_title %></a></td>
                <td>
                  <a href="/cases/new/<%= case.id %>;">编辑</a>
                  <a href="/cases/destroy/<%=case.id%>">删除</a>
                </td>
              </tr>
              <% end %>
               
              </tbody>
            </table>
          </div>
        </div>
        </div>
      <div class="footer">
        <div class="pull-right">
          <strong>GonPush.com</strong> &copy; 2018
        </div>
      </div>
    </div>
  </div>