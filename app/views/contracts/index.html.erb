<p id="notice"><%= notice %></p>

<h1>Contracts</h1>

<table>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Marketer</th>
      <th>Campaigns</th>
      <th>Contract price</th>
      <th>Down payment date</th>
      <th>Down payment</th>
      <th>Rest payment date</th>
      <th>Rest payment</th>
      <th>Contract image</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.creator_id %></td>
        <td><%= contract.marketer_id %></td>
        <td><%= contract.campaigns_id %></td>
        <td><%= contract.contract_price %></td>
        <td><%= contract.down_payment_date %></td>
        <td><%= contract.down_payment %></td>
        <td><%= contract.rest_payment_date %></td>
        <td><%= contract.rest_payment %></td>
        <td><%= contract.contract_image %></td>
        <td><%= contract.comment %></td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contract', new_contract_path %>
