
                       <div class="table-responsive">
                        <table class="table table-striped table-hover">
                          <thead>
                          <tr>
                            <th>#</th>
                            <th></th>
                            <th>粉丝</th>
                            <th>阅读</th>
                            <th>价格</th> 
                            <th>状态</th>
                          </tr>
                          </thead>
                          <tbody>
                          
                             <% if @creators.empty? -%>

                        <%else -%>
                        <% @creators.each_with_index do |creator,i| %>
                        <input type="hidden" id="userDescription_<%=i%>" value="<%=creator.description%>"/>
                        <input type="hidden" id="avatar<%=i%>" value="<%=creator.avatar%>"/>
                         <tr id="r_<%=i%>" attrStatus="0" onclick="checkCreator(<%=i%>,<%=creator.id%>)">
                            <td class="client-avatar"><img  alt="image" src="/uploads/<%=creator.avatar%>" onerror="this.src='/uploads/default_small.png'"> </td>
                            <td><a data-toggle="tab" href="#contact-1" class="client-link" id="usrName_<%=i%>"><%=creator.username%></a></td>
                            <td id="fans_<%=i%>"> <%=creator.totalfans%></td>
                            <td id="reader_<%=i%>"> <%=creator.totalreaders%></td>
                <td id="price_<%=i%>"><%=creator.min_service_price%></td>
                            <td class="client-status"><span id="inviteStatus_<%=i%>">未邀请</span></td>
                         </tr>
                        <% end %>
                         <% end %>

                          </tbody>
                        </table>
                         <div class="user_page fdtl_page " id="will_page">  
<%= will_paginate @creators, :container => false, :previous_label => '上一页', :next_label => '下一页', :inner_window => 2, :outer_window => 1 %>

</div>

</div>

<script>    
$(function () {       
 $('#will_page a').attr('data-remote', 'true'); //指定分页为ajax请求   
 });
</script>