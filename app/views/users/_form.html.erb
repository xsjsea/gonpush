<h3>欢迎注册原力推平台</h3>
<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

              <div class="form-group">
                <%= form.select :usertype, [['请选择身份', '-1'], ['我是广告主', '1'], ['我是自媒体', '0']],{},class:"form-control m-b"%>
 
          
            </div>
              <div class="form-group">
                       <%= form.text_field :username,class:'form-control',placeholder:'昵称' %>
              </div>
              <div class="form-group">
                <%= form.text_field :truename,class:'form-control',placeholder:'手机' %>
                
              </div>
              <div class="form-group">
                <%= form.password_field :password,class:'form-control',placeholder:'密码' %>
              </div>
               <%= form.hidden_field :status,value:"1"%>
               <%= form.hidden_field :province_id,value:""%>
               <%= form.hidden_field :city_id,value:""%>
               <%= form.hidden_field :distirct_id,value:""%>
               <%= form.hidden_field :address,value:""%>
               <%= form.hidden_field :user_comment,value:""%>
               <%= form.submit '注册',class:'btn btn-primary block full-width m-b' %>
              <p class="text-muted text-center"><small>已经有注册账户?</small></p>
              <a class="btn btn-sm btn-white btn-block" href="/login">立即登录</a>
        
<% end %>
